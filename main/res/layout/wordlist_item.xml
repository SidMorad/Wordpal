<TableLayout
  xmlns:android = 'http://schemas.android.com/apk/res/android'
  android:layout_width = 'match_parent'
  android:layout_height = 'wrap_content'>

<TableRow
  android:gravity = 'center'
  android:textAlignment = 'center'>

  <TextView
    android:id = '@+id/question_id'
    android:gravity = 'center'
    android:layout_span = '4'
    android:layout_width = 'wrap_content'
    android:layout_height = 'wrap_content'
   />
</TableRow>

<TableRow
  android:textAlignment = 'center'
  android:gravity = 'center'
  android:paddingBottom = '16dp'>

  <Button
    android:id = '@+id/de_id'
    android:text = '@string/de'
    android:gravity = 'right|center_vertical'
    android:onClick = 'deToast'
    android:textColor = '@color/white'
    android:background = '@drawable/button_lang'
    android:paddingRight = '4dp'
    style = '@style/button_at_wordlist'
    />

  <Button
    android:id = '@+id/not_sure_id'
    android:text = '@string/not_sure'
    android:gravity = 'right|center_vertical'
    android:onClick = 'notSure'
    android:background = '@drawable/button_notsure'
    android:paddingRight = '4dp'
    style = '@style/button_at_wordlist'
    />

  <Button
    android:id = '@+id/i_know_id'
    android:text = '@string/i_know'
    android:gravity = 'left|center_vertical'
    android:onClick = 'iKnow'
    android:background = '@drawable/button_iknow'
    android:paddingLeft = '4dp'
    style = '@style/button_at_wordlist'
    />

  <Button
    android:id = '@+id/fa_id'
    android:text = '@string/fa'
    android:onClick = 'faToast'
    android:gravity = 'left|center_vertical'
    android:textColor = '@color/white'
    android:background = '@drawable/button_lang'
    android:paddingLeft = '4dp'
    style = '@style/button_at_wordlist'
    />

</TableRow>
</TableLayout>